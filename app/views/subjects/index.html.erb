<p id="notice"><%= notice %></p>

<h1>Subjects</h1>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th>Code</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.title %></td>
        <td><%= subject.code %></td>
        <td>
          <%= link_to subject, class: 'btn btn-default' do %>
              <%= fa_icon 'info-circle', text: 'Show' %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_subject_path(subject), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Remove', subject, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to new_subject_path, class: 'btn btn-success' do %>
    <%= fa_icon 'plus', text: 'New Subject' %>
<% end %>